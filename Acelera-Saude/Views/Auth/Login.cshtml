@model Acelera_Saude.Models.LoginModel;
@{
    ViewData["Title"] = "Login";
}

<link href="~/css/loginStyle.css" rel="stylesheet" type="text/css" />


<title>Login</title>
    
<body>
    <div class="login">
        <div class="login__content">
            <div class="login__img">
                <img src="~/Assets/ACO061-23 CAPA SITE INTERNO ACELERA.png" alt="">
            </div>

            <div class="login__forms">
                <form asp-action="Login" class="login__registre" id="login-in">
                    <h1 class="login__title">Login</h1>
            
                    <div class="login__box">
                        <i class='bx bx-user login__icon'></i>                     
                        <input asp-for="Email" type="email" placeholder="Email" class="login__input">
                        <span asp-validation-for="Email"  class="text-danger"></span>
                    </div>

                    <div class="login__box">
                        <i class='bx bx-lock-alt login__icon'></i>                      
                        <input asp-for="Password"  type="password" placeholder="Password" class="login__input">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <a href="#" class="login__forgot">Esqueceu a senha?</a>
  
                    <input type="submit" class="login__button" />

                    <div>
                        <span class="login__account">Registre-se aqui?</span>
                        <span class="login__signin" id="sign-up">Registre-se</span>
                    </div>
           
                </form>
            </div>
        </div>
    </div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}